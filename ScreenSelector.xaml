<Window x:Class="FocusMode.ScreenSelector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FocusMode"
        mc:Ignorable="d"
        Title="Set Primary Display" Height="110" Width="400"
        WindowState="Normal"
        WindowStyle="ThreeDBorderWindow"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen" Icon="/icon.ico"
        >
    <Grid>
        <TextBlock Text="Drag this window to the desired primary screen and click button below.&#10;You can change this anytime."
                   VerticalAlignment="Top" HorizontalAlignment="Center" TextAlignment="Center" Margin="0, 5, 0, 0"/>
        <Button Content="Set Primary Screen" Width="130" Height="25" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 30, 0, 0"
                Click="Ok_Click"/>
    </Grid>
</Window>
